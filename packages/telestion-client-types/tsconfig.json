{
	"compilerOptions": {
		"strict": true,
		"module": "commonjs",
		"target": "es5",
		"declaration": true,
		"declarationDir": "./types",
		"allowJs": true,
		"checkJs": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"emitDeclarationOnly": true,
		/* reset paths because typescript threat workspace dependencies as normal dependencies */
		"paths": {}
	},
	"include": ["src"],
	"exclude": ["node_modules", "types"]
}
